@model OAuth2Demo.Web.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "OAuth2 Demo";
}

<div class="login-with-google-section">
    <h5>OpenID Demo</h5>
    <p>Login with Google and see your Google profile data.</p>
    <a href="@Model.GoogleLoginUrl"><button type="button" class="btn btn-secondary">Login with Google</button></a>
</div>

<div class="connect-to-github-section">
    <h5>Delegated Authorization and Authorization Code Flow Demo</h5>
    <p>Get authorized in Github and see your public repositories.</p>
    <a href="@Model.GithubOAuthUrl"><button type="button" class="btn btn-secondary">Connect to Github</button></a>
</div>